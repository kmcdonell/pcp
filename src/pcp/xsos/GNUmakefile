TOPDIR = ../../..
include $(TOPDIR)/src/include/builddefs

TARGET = pcp-xsos
MAN_PAGES = $(TARGET).1

default: $(TARGET)

include $(BUILDRULES)

install: default
ifeq "$(findstring $(PCP_PLATFORM),freebsd openbsd netbsd)" ""
	$(INSTALL) -m 755 $(TARGET) $(PCP_BINADM_DIR)/$(TARGET)
	$(INSTALL_MAN)
endif

default_pcp : default

install_pcp : install

check:: $(MAN_PAGES)
	$(MANLINT) $^
