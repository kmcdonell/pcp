# Install the OpenTelemetry PMDA and/or PMNS
#

. $PCP_DIR/etc/pcp.env
. $PCP_SHARE_DIR/lib/pmdaproc.sh

iam=opentelemetry
python_opt=true
daemon_opt=false

#
# Starts in "not ready" state described the in pmcd(1) man page.
# When it has completed its startup a PM_ERR_PMDAREADY error PDU
# is sent to PMCD, indicating readiness to process new requests.
#
ipc_prot="binary notready"

pmdaSetup
pmdaInstall
exit

