# Convert an installation with the original JSON PMDA to OpenTelemetry.
#

. $PCP_DIR/etc/pcp.env

if grep -q ^json "$PCP_PMCDCONF_PATH" 2>/dev/null
then
    if grep -q ^opentelemetry "$PCP_PMCDCONF_PATH" 2>/dev/null
    then
	# already have an opentelemetry PMDA install here
	sed -i -e "/pmdajson/d" $PCP_PMCDCONF_PATH 2>/dev/null
    else
	sed -i -e "s,json,opentelemetry,g" $PCP_PMCDCONF_PATH 2>/dev/null
    fi
    rm -f "$PCP_VAR_DIR/pmns/json" 2>/dev/null
fi

exit 0
